<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="SpUsage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#55888888"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/device_current"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_device_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/info_device_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textColor="#000000"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#0e0e0e" />

    <Button
        android:id="@+id/info_get_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume Info"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/info_device_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textColor="#000000"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#0e0e0e" />

    <Button
        android:id="@+id/info_get_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media Info"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/info_device_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textColor="#000000"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#0e0e0e" />

    <Button
        android:id="@+id/info_get_transport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transport Info"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/info_device_transport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textColor="#000000"
        android:textSize="14dp" />

</LinearLayout>